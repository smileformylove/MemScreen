#!/usr/bin/env bash
# Convenience launcher for MemScreen.
# Supports a single command from project root: ./flutter

set -euo pipefail

SCRIPT_DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"
LAUNCH_SCRIPT="$SCRIPT_DIR/scripts/launch.sh"

if [[ -x "$LAUNCH_SCRIPT" ]]; then
  exec "$LAUNCH_SCRIPT" "$@"
fi

echo "Error: launcher not found at $LAUNCH_SCRIPT"
exit 1
